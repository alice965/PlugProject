<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myplay">
	<insert id="add">
		insert into room values(room_seq.nextval, #{id}, #{title}, 0, sysdate, #{content})
	</insert>
	
	<select id="list" resultType="java.util.HashMap">
		select * from room order by num desc
	</select>
	<select id="readOne" resultType="java.util.HashMap" >
		select * from room where num = #{num}
	</select>
	<delete id="delete">
		delete from room where num=#{num}
	</delete>
	<update id="edit">
		update room set title=#{title}, content=#{content} where num=#{num}
	</update>
	<select id="countListPage" resultType="java.lang.Integer">
		select count(*) as count from room	
	</select>
	<select id="listPage" resultType="java.util.HashMap">
		select * from(select rownum as r, b.* from(select * from room order by num desc)b) where r between #{start} and #{end}
	</select>
</mapper>












